<h1><a href="<%= events_show_path @pool.tournament.event_id %>"><%= @pool.tournament.event.name %></a></h1>
<h2><a href="<%= tournaments_show_path @pool.tournament.id %>"><%= @pool.tournament.name %></a></h2>
<h3><%= @pool.name %></h3>
<ul>
<% @pool.matches.each_with_index do |match, index| %>
  <li>Match <%= index %>
    <ul>
      <% match.fighters.each do |fighter| %>
      <li> <%= fighter.name %> </li>
      <% end %>
    </ul>
  </li>
<% end %>
</ul>